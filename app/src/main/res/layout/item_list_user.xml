<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_ten"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="254dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nama   : rivaldy" />

    <TextView
        android:id="@+id/tv_loai"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="254dp"
        android:layout_height="23dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_ten"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tv_ten"
        app:layout_constraintTop_toBottomOf="@+id/tv_ten"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Alamat : Makassar" />

    <TextView
        android:id="@+id/tv_gia"
        style="@style/TextAppearance.MaterialComponents.Caption"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/tv_loai"
        app:layout_constraintStart_toStartOf="@+id/tv_ten"
        app:layout_constraintTop_toBottomOf="@id/tv_loai"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Umur : 22 Tahun" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gia"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/tv_anh"
        android:layout_width="122dp"
        android:layout_height="91dp"
        app:imageUrl="@{sanpham.AnhSP}"
        tools:layout_editor_absoluteX="281dp"
        tools:layout_editor_absoluteY="0dp"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>